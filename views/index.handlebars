<h1 style="text-align: center; padding:20px">Burger Log!</h1>
<div class="row">
  <div class="col">
    <img src="assets/images/likemeat-3sgNkN4wRWI-unsplash.jpg" class="rounded" style="width:100%; height:auto;" alt="Photo by LikeMeat on Unsplash">
  </div>
  <div class="col">
    <h2>State your kind of Burger?</h2>
    <form id="create-form">
      <div class="form-group">
        <label for="ca">Burger Type:</label>
        <input type="text" id="ca" name="name">
      </div>
      <div class="form-group">
        {{!-- <label for="2BeEaten">2BeEaten?</label><br> --}}
        {{!-- <input type="radio" name="2BeEaten" value="1" id="2BeEaten" checked> Sleepy!<br>
        <input type="radio" name="sleepy" value="0" id="awake"> Awake --}}
      </div>
      <button type="submit" class="btn btn-outline-light">Add Burger</button>
    </form>
  </div>

  <!-- Force next columns to break to new line -->
  <div class="w-100"></div>

  <div class="col">
    <h2>Burgers to be Devoured!</h2>
    <dl>
      {{#each burgers}}
      {{#unless sleepy}}
      {{> burgers/burger-block sleep=true}}
      {{/unless}}
      {{/each}}
    </dl>
  </div>
  <div class="col">
    <h2>Burgers that have been Devoured</h2>
    <dl>
      {{#each burgers}}
      {{#if sleepy}}
      {{> burgers/burger-block sleep=false}}
      {{/if}}
      {{/each}}
    </dl>
  </div>
</div>